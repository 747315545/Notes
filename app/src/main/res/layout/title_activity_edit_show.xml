<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/title_bg"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/rl_title_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/edit_activity_title_rl_show"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true">
        <TextView
            android:textSize="@dimen/edit_activity_tv_title_text_size"
            android:textColor="@color/title_text_black_color"
            android:id="@+id/edit_activity_tv_title_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_activity_tv_title_margin_top"
            android:text="2016年7月11日"
            android:layout_centerHorizontal="true" />
        <TextView
            android:textSize="@dimen/edit_activity_tv_date_text_size"
            android:textColor="@color/edit_activity_tv_date_text_color"
            android:id="@+id/edit_activity_tv_title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_activity_tv_date_margin_top"
            android:layout_marginBottom="@dimen/edit_activity_tv_date_margin_bottom"
            android:text="上午10:10"
            android:layout_below="@id/edit_activity_tv_title_date"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <ImageView
        android:gravity="start|center"
        android:layout_gravity="start"
        android:id="@+id/edit_activity_iv_title_show_back_arrow"
        android:paddingRight="@dimen/title_tv_cancel_margin_left"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:src="@drawable/title_icon_back"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/iv_edit_activity_title_back_arrow_margin_start" />
    <ImageView
        android:gravity="end|center"
        android:layout_gravity="end"
        android:id="@+id/edit_activity_iv_share"
        android:paddingLeft="@dimen/tv_edit_margin_end"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/title_icon_share"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/iv_edit_activity_title_back_arrow_margin_start"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>
</RelativeLayout>